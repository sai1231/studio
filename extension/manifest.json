{
  "manifest_version": 3,
  "name": "Mäti",
  "version": "1.1.0",
  "description": "Save links, notes, and ideas directly to your Mäti account.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Mäti"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.gstatic.com; object-src 'self'"
  }
}
