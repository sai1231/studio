
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, deny all read and write access to all files.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to read and write files ONLY within their own user-specific folders.
    // This single rule covers contentImages, contentPdfs, and voiceRecordings.
    match /{folder}/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
