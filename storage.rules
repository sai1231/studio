rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Original content uploaded by users
    match /contentImages/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /contentPdfs/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /voiceRecordings/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Compressed images generated by the server-side enrichment flow
    match /display/{userId}/{allPaths=**} {
      allow read: if true; // Compressed images are public
      allow write: if request.auth != null && request.auth.uid == userId; // Allow users to write to their own folder
    }
  }
}
